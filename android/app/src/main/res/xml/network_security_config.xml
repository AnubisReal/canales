<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">ipfs.io</domain>
        <domain includeSubdomains="true">gateway.ipfs.io</domain>
        <domain includeSubdomains="true">cloudflare-ipfs.com</domain>
        <domain includeSubdomains="true">dweb.link</domain>
    </domain-config>
</network-security-config>
